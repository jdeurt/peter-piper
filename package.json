{
    "version": "0.0.21",
    "name": "peter-piper",
    "repository": "jdeurt/peter-piper",
    "description": "A zero-dependency collection of typed composable/pipable utility functions with a focus on lazy evaluation.",
    "unpkg": "dist/index.min.js",
    "module": "dist/index.mjs",
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "license": "MIT",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Juan de Urtubey",
        "email": "jdeurt@gmail.com",
        "url": "https://jdeurt.xyz"
    },
    "files": [
        "dist",
        "types"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts",
        "generate-types": "node scripts/generators/types/pipe.js && node scripts/generators/types/cooked-pipe.js",
        "build": "rollup -c",
        "prepublishOnly": "npm run build",
        "types": "tsc --noEmit",
        "test": "ava",
        "publish:patch": "npm version patch && git push origin main --tags && npm publish",
        "publish:minor": "npm version minor && git push origin main --tags && npm publish",
        "publish:major": "npm version major && git push origin main --tags && npm publish"
    },
    "ava": {
        "extensions": {
            "ts": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm",
            "--no-warnings"
        ]
    },
    "keywords": [
        "pipable",
        "composable",
        "utils",
        "utilities",
        "typed"
    ],
    "devDependencies": {
        "@fast-check/ava": "^1.1.3",
        "@jdeurt/eslint-config": "^3.2.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.0",
        "@types/node": "^18.11.18",
        "ava": "^5.1.1",
        "eslint": "^8.32.0",
        "prettier": "^2.8.3",
        "rollup": "^3.12.0",
        "rollup-plugin-typescript2": "^0.34.1",
        "ts-node": "^10.9.1",
        "typedoc": "^0.23.24",
        "typedoc-plugin-markdown": "^3.14.0",
        "typescript": "^4.9.4"
    }
}
