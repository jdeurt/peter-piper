{
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS",
            "moduleResolution": "node"
        },
        "include": ["test/**/*"]
    },
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "types",
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["@types/**/*", "src/**/*"],
    "exclude": ["node_modules"]
}
